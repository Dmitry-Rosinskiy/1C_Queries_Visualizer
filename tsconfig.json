{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "es6",                                
    "rootDir": "./src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,                                  
    "esModuleInterop": true,
    "moduleResolution": "node",                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "jsx": "react"
    //"declaration": true                                       
  },
  "include": ["src"]
}
